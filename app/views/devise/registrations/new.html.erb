<div class="container p-4">
  <div class="session d-flex">
    <div class="register-form bg-white">
    <h1>Bienvenue sur <strong>maïweï</strong> !</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= label_tag :email, "Email", class: "p-2" %>
        <%= f.input :email, label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "Votre adresse e-mail" }%>
        <%= label_tag :email, "Mot de passe", class: "p-2" %>
        <%= f.input :password, label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "******" } %>
        <%= label_tag :email, "Confirmation de mot de passe", class: "p-2" %>
        <%= f.input :password_confirmation, label: false,
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "******" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "S'inscrire !", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
    </div>
    <div class="photo">
      <img src="https://images.pexels.com/photos/2272940/pexels-photo-2272940.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Ravi de votre inscription !">
    </div>
  </div>
</div>
