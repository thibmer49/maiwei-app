<div class="container p-4">
  <div class="session d-flex">
    <div class="picture">
      <img src="https://images.pexels.com/photos/842550/pexels-photo-842550.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Ravi de vous revoir !">
    </div>
    <div class="form bg-white">
      <h1 class="text-center">Ravi de vous retrouver pour votre prochain s√©jour !</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signing' }) do |f| %>
        <div class="form-label-group">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" }, label_html: { class: "text-center" } %>
        </div>
        <div class="form-label-group">
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
        </div>

        <div class="form-actions" id="connexion">
          <%= f.button :submit, "Connexion", class: "btn btn-primary text-center" %>
        </div>
      <% end %>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
